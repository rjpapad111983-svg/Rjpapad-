<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Users</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="centered-page">
    <div class="card">
      <h2>All Users</h2>
      <table>
        <thead><tr><th>ID</th><th>Name</th><th>Mobile</th><th>Sponsor</th><th>Position</th></tr></thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.name %></td>
              <td><%= u.mobile %></td>
              <td><%= u.sponsor_id || '-' %></td>
              <td><%= u.position || '-' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
